<link rel="stylesheet" href="/includes/model.css" />
<div
	class="modal fade"
	id="exampleModal"
	tabindex="-1"
	aria-labelledby="exampleModalLabel"
	aria-hidden="true"
>
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5 ms-3" id="exampleModalLabel">
					User Profile
				</h1>
			</div>
			<div class="modal-body row align-items-center">
				<img
					src="https://res.cloudinary.com/duvvugmgx/image/upload/v1730356925/one-piece-logo-website1_ntnynm.jpg"
					class="col-5 modal-image"
				/>
				<div class="col-7 modal-body-text">
					<% if(currentUser){ %>
					<span>Username:- <%= currentUser.username %></span><br />
					<span>Email:- <%= currentUser.email %></span>
					<% } else{%>
					<span>Username:- Unknown</span><br />
					<span>Email:- Unknown</span>
					<% } %>
				</div>
			</div>
			<div class="modal-footer">
				<button
					type="button"
					class="btn btn-outline-dark"
					data-bs-dismiss="modal"
				>
					Close
				</button>
			</div>
		</div>
	</div>
</div>
