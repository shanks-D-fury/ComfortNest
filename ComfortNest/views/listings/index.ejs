<% layout("/layouts/boilerplate.ejs") -%>
<link rel="stylesheet" href="/listings/cards.css" />
<body>
	<h4 class="mt-1 mb-2 index-flash-msg"><%=success %></h4>
	<!-- <form action="/listings/new" method="get">
		<button>Create New Hotel Info</button>
	</form> -->
	<div class="row row-col-lg-4">
		<% for(let listing of featchedInfo) {%>
		<div class="card" style="width: 17rem">
			<a href="/listings/<%= listing._id%>" id="normalTitleLink">
				<img
					src="<%=listing.image%>"
					class="card-img-top"
					alt="<%=listing.title%>"
				/>
				<div class="card-body">
					<p class="card-text">
						<b> <%=listing.title%></b> <br />
						&#8377; <%= listing.price.toLocaleString("en-in")%> /night
					</p>
				</div>
			</a>
		</div>
		<% } %>
	</div>
</body>
